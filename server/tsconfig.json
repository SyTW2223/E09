{
    "exclude": [
      "/node_modules",
      "./tests",
      "./dist"
    ],
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "skipLibCheck": true
    }
  }